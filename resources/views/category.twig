{% extends 'templates/app.twig' %} 

 {% block content %}
     <div class="row">
         <div class="col-md-12 col-sm-6">
             <h4>{{ category.name }}</h4>
         </div>
     </div>
     <div class="row">
        {% if products|length > 0 %}
             {% for index, product in products %}
                 <div class="col-md-4 col-sm-6">
                     {% include 'products/partials/item.twig' with {product: product} %}
                 </div>
                 {% if (index + 1) % 3 == 0 %}
                   </div>
                     <div class="row">
                 {% endif %}
             {% endfor %}
         {% else %}
             <p>No results found. <a href="{{ path_for('home') }}">View All Products</a></p>
         {% endif %}
     </div>
 {% endblock %}